---
import Navbar from '../section/navbar.astro'
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props as Props
---

<html lang="en">
  <head>
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Meng Lin (MengLinMaker)" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta charset="UTF-8" />
    <!-- PWA -->
    <!-- Fully compliant according to Lighthouse and https://realfavicongenerator.net/favicon_checker -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/ico" sizes="32x32" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="shortcut icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
    <link rel="apple-touch-icon" type="image/png" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="mask-icon" type="image/svg" href="/safari-pinned-tab.svg" color="#22c55e" />
    <meta name="msapplication-TileColor" content="#22c55e" />
    <meta name="theme-color" content="#ffffff" />
    <!-- Critical JS and CSS -->
    <script is:inline>
      navigator.serviceWorker?.register('sw.js')
    </script>
    <ViewTransitions />
  </head>
  <style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    * {
      -ms-touch-action: manipulation;
      touch-action: manipulation;
    }

    @media (max-width: 640px) {
      /* Hide scrollbar for Chrome, Safari and Opera */
      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      .no-scrollbar {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
    }
  </style>
  <body class="text-neutral-dark duration-200">
    <Navbar />
    <slot />
  </body>
</html>
